{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Write|Edit|WebFetch|WebSearch|Task",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/../hooks/acteon-gate.sh",
            "timeout": 10,
            "statusMessage": "Checking Acteon policy..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/../hooks/notify-complete.sh",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ]
  }
}
